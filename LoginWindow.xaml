<Window x:Class="Индивидуальное_задание.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Аутентификация" Height="180" Width="300">
    <StackPanel>
        <Label>Логин</Label>
        <TextBox x:Name="UsernameTextBox"/>
        <Label>Пароль</Label>
        <PasswordBox x:Name="PasswordBox"/>
        <Button Content="Войти" Click="Login_Click" Margin="86,0"/>
        <Button Content="Зарегистрироваться" Click="Register_Click" Margin="86,0"/>
    </StackPanel>
</Window>
